.menu
    // border: 1px solid blue
    // display: none
    visibility hidden
    position: absolute
    opacity 0
    left: 0
    right: 0
    top: 100%
    background: rgba(47, 53, 79, .9)
    bottom: 0
    height 100vh
    transform: translateY(-50px)
    transition: .3s transform, .3s opacity
    will-change: transform
    ul
        padding: 0
        list-style: none
    li
        border-top: 1px solid var(--grayishBlue)
        &:last-child
            a
                border: 2px solid #ffffff
                border-radius: 5px
                margin-top: 1em
                padding: .7em

    a
        color: #ffffff
        text-decoration: none
        text-transform: uppercase
        display: block
        text-align: center
        padding: 1em
        letter-spacing: 2px
    &-checkbox
        display: none
        &:checked
            & ~ .header
                background:rgba(47, 53, 79, .9)
                .menu-open
                    // border: 1px solid blue
                    background-image: url('../images/icon-close.svg')
                & .header-logo
                    background-image: url('../images/logo-bookmark-white.svg')
                & .menu
                    transform: translateX(0)
                    visibility: visible
                    opacity 1
                    // display: block
                    // border: 1px solid orange   
    &-open
        // border:1px solid red
        user-select none
        width: 40px
        height 40px
        display: inline-block
        cursor: pointer
        background: url('../images/icon-hamburger.svg') no-repeat center
    @media screen and (min-width: 1024px)
        transform: translateY(0)
        visibility: visible
        opacity 1
        position: initial
        height auto
        background: initial
        &-open
            display: none
        a
            color: var(--veryDarkBlue)
        li    
            border none
            &:last-child
                a
                    border: none
                    margin-top 0
                    background: var(--softRed)
                    color: #ffffff
                    padding: .7em 2em
                    border-radius: .5em
                    margin-left 2em
        ul
            display flex